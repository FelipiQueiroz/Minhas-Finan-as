<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/listaGastos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnResumo"
        android:padding="16dp"/>

    <Button
        android:id="@+id/btnAdicionar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar Gasto"
        android:contentDescription="Botão para adicionar um novo gasto"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@android:drawable/ic_input_add" />

    <Button
        android:id="@+id/btnResumo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resumo"
        android:contentDescription="Botão para ver o resumo dos gastos"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_menu_info_details" />
</RelativeLayout>